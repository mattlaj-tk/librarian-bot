# Slack App Credentials
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token  # Required for Socket Mode (development)

# Application Mode
APP_MODE=socket  # 'socket' for development, 'http' for production
PORT=3000  # Port for HTTP server in production mode

# LLM Settings
LLM_API_KEY=your-llm-api-key
LLM_API_URL=https://api.openai.com/v1/chat/completions

# Channel Access Control
ALLOWED_CHANNEL_IDS=C0123456789,C9876543210
ALLOW_ALL_PUBLIC_CHANNELS=false
ALLOW_PRIVATE_CHANNELS=true 